            "@card-games-api/decks/testing": [
                "libs/war/decks/src/testing/index.ts"
            ],
            "@card-games-api/environment": [
                "libs/shared/environment/src/lib/index.ts"
            ],
            "@card-games-api/games": ["libs/war/games/src/lib/index.ts"],
