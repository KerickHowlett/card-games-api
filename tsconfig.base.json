            "@card-games-api/utils": ["libs/shared/utils/src/lib/index.ts"],
            "@card-games-api/utils/testing": [
                "libs/shared/utils/src/testing/index.ts"
            ],
            "@card-games-api/war": ["apps/war/src/app/index.ts"],
            "@card-games-api/war/testing": ["apps/war/src/testing/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp", "**/src/testing"]
}
