            "@card-games-api/database": ["libs/shared/database/src/index.ts"],
            "@card-games-api/database/nedb": [
                "libs/shared/database/src/lib/nedb/index.ts"
            ],
            "@card-games-api/database/nedb/testing": [
                "libs/shared/database/src/testing/nedb/index.ts"
            ],
            "@card-games-api/database/node-cache": [
                "libs/shared/database/src/lib/node-cache/index.ts"
            ],
            "@card-games-api/database/node-cache/testing": [
                "libs/shared/database/src/testing/node-cache/index.ts"
            ],
            "@card-games-api/database/testing": [
