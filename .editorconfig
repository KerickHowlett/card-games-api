root = true

[*]
charset = utf-8
end_of_line = lf
indent_brace_style = K&R
indent_style = space
indent_size = 4
insert_final_newline = true
quote_type = single
spaces_around_brackets = inside
spaces_around_operators = true
trim_trailing_whitespace = false

[*.ts]
curly_bracket_next_line = true

[*.sh]
quote_type = auto

[*.{yml,yaml}]
indent_style = space

[*.md]
indent_size = 4
max_line_length = 1000

[Makefile]
indent_size = 8
indent_style = tab
